{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"          // optional: compiled JS files go here
  },
  "include": ["scripts/**/*.ts", "finalProject/**/*.ts"],
  "exclude": ["node_modules"]
}
